<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_page">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_about_photo"
        android:layout_width="144dp"
        android:layout_height="134dp"
        android:layout_marginTop="72dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_about_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:text="@string/placeholder_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="@+id/img_about_photo"
        app:layout_constraintStart_toStartOf="@+id/img_about_photo"
        app:layout_constraintTop_toBottomOf="@+id/img_about_photo" />
    <TextView
        android:id="@+id/tv_about_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/light_grey"
        tools:text="@string/placeholder_description"
        app:layout_constraintEnd_toEndOf="@+id/tv_about_name"
        app:layout_constraintStart_toStartOf="@+id/tv_about_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_about_name" />
</androidx.constraintlayout.widget.ConstraintLayout>